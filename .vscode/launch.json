{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Report Compiler - Example File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/report_compiler.py",
            "args": [
                "${workspaceFolder}/examples/simple-report/bridge_report.docx",
                "${workspaceFolder}/examples/simple-report/debug_output.pdf"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Report Compiler - Custom Input",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/report_compiler.py",
            "args": [
                "${input:docxFile}",
                "${input:outputPdf}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Report Compiler - Step Into All Code",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/report_compiler.py",
            "args": [
                "${workspaceFolder}/examples/simple-report/bridge_report.docx",
                "${workspaceFolder}/examples/simple-report/debug_detailed.pdf"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Report Compiler - No Placeholders Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/report_compiler.py",
            "args": [
                "${workspaceFolder}/examples/simple-report/parsons_sample.docx",
                "${workspaceFolder}/examples/simple-report/no_placeholders_debug.pdf"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Report Compiler - Main Function Only",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/report_compiler.py",
            "args": [
                "--help"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Debug Report Compiler - Error Testing",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/report_compiler.py",
            "args": [
                "nonexistent_file.docx",
                "test_error.pdf"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        }
    ],
    "inputs": [
        {
            "id": "docxFile",
            "description": "Path to the input DOCX file",
            "default": "${workspaceFolder}/examples/simple-report/bridge_report.docx",
            "type": "promptString"
        },
        {
            "id": "outputPdf",
            "description": "Path for the output PDF file",
            "default": "${workspaceFolder}/examples/simple-report/custom_debug_output.pdf",
            "type": "promptString"
        }
    ]
}
